{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true
    },
    "include": [
        "*.ts",
        "../*.ts",
        "./new/*.ts"
    ],
    // Updated to include TypeScript files from "src"
    "exclude": [
        "lib",
        "node_modules"
    ]
}
